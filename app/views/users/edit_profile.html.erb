<h3>Edit Profile</h3>
<%= form_with(model: @user, local: true, url: update_profile_path) do |form| %>
  <div class='edit-profile-container'>
  
    Update Profile Picture:
    <%= form.file_field :avatar, direct_upload: true %>

    <% if @user.avatar.attached? %>
      <%= image_tag url_for(@user.avatar), class: 'edit-profile-avatar' %>
    <% end %>

    <br>
    <div class='profile-edit-fields'>
      <div class="field">
        <label for='location'>Location</label>
        <%= form.text_field :location %>
      </div>

      <div class="field">
        <label for='education1'>Education</label>
        <%= form.text_field :education1 %>
      </div>

      <div class="field">
        <label for='education2'>Education</label>
        <%= form.text_field :education2 %>
      </div>

      <div class="field">
        <label for='education3'>Education</label>
        <%= form.text_field :education3 %>
      </div>

      <div class="field">
        <label for='occupation'>Occupation</label>
        <%= form.text_field :occupation %>
      </div>

      <div class="field">
        <label for='website'>Website</label>
        <%= form.text_field :website %>
      </div>

      <div class="field">
        <label for='birthday'>Birthday</label>
        <%= form.date_select :birthday, discard_year: true, prompt: true %>
      </div>
    </div>

    <div class="submit-wrapper">
      <%= form.submit 'Update Profile', class: 'update-profile' %>
    </div>
  </div>
<% end %>